<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns="http://resources.qdexapps.com/schema/v1/QDocument.xsd">

  
  <!-- Question mark icon by Freepik (http://www.freepik.com) from http://www.flaticon.com -->
  <!-- Letter A icon by Freepik (http://www.freepik.com) from http://www.flaticon.com -->
  <!-- Cross mark icon by Dave Gandy (http://fontawesome.io) from http://www.flaticon.com -->
  <!-- Check sign icon by Elegant Themes (http://www.elegantthemes.com) from http://www.flaticon.com -->

  
  <!-- - - - - - -  COLOR  - - - - - - -->

  <style name="themeColour">
    <!--Light Shade-->
    <background color="232 244 254" />
  </style>
  
  <style name="titleColour">
    <!--Darker Shade of themeColour-->
    <foreground color="37 103 167" />
  </style>

  <style name="quanserRed">
    <foreground color="quanserRed" />
  </style>

  <style name="NI_blue">
    <foreground color="37 103 167" />
  </style>

  <style name="NI_blueBackground">
    <background color="37 103 167" />
  </style>
  
  
  
  <!-- - - - - - - STYLE AND FORMAT - - - - - - -->

  <!--
        Define a style for documents, which establishes defaults for
        all elements because it is marked as cascading.
  -->
  <style name="documents">
    <!-- Define a default absolute font size -->
    <size points="18" cascading="true" />

    <!-- Set the default width percentage -->
    <widthPercentage cascading="true">1</widthPercentage>
  </style>


  <!--Chapter Page-->
  <style name="chapterTitle" link="titleColour">
    <size scale="4" />
    <textAlignment>right</textAlignment>
    <marginBottom>100</marginBottom>
  </style>

  <style>
    <counter name="chaptNum" format="decimal" />
  </style>

  <style name="chapterNumber" link="titleColour">
    <size scale="10" />
    <textAlignment>right</textAlignment>

    <increment counter="chaptNum" />
    <numbering counter="chaptNum" mode="hierarchical" suffix="true" />
  </style>

  <style name="chapterContents" cascading="true">
    <horizontalAlignment>right</horizontalAlignment>
    <marginTop>200</marginTop>
    <marginBottom>200</marginBottom>
  </style>

  <style>
    <counter name="contentBullet" format="decimal" />
  </style>

  <style name="content">
    <increment counter="contentBullet" />
    <numbering counter="contentBullet" mode="flat" pattern="1.#   " />
  </style>

  <style>
    <counter name="bullet" format="lowerAlpha" />
  </style>
  <style name="alphaBullet">
    <marginBottom>0</marginBottom>
    <marginTop>0</marginTop>
    <marginLeft>50</marginLeft>
    <marginRight>0</marginRight>
    <increment counter="bullet" />
    <numbering counter="bullet" mode="flat" pattern="(#) " />
  </style>

  <style name="stripe" link="themeColour">
    <widthPercentage>0.3</widthPercentage>
  </style>

  <!-- Define a style for pages -->
  <style name="pages">
    <!-- Sets the default foreground colour to black -->
    <foreground color="black" />

    <!-- Sets the default background colour to white -->
    <background color="white" />
  </style>

  <!--- Make all section headings bold -->
  <style name="sectionHeadings" link="margins titleColour">
    <!--bold>false</bold-->
    <!--marginTop>20</marginTop>
      <marginBottom>10</marginBottom-->
  </style>

  <!-- Section level 1 headings to make the font larger -->
  <style name="sectionLevel1Headings">
    <marginTop>10</marginTop>
    <marginBottom>0</marginBottom>
    <textAlignment>center</textAlignment>
    <size scale="xlarge" />
  </style>

  <!-- Section level 2 headings to make the font a bit larger -->
  <style name="sectionLevel2Headings">
    <bold>false</bold>
    <marginTop>20</marginTop>
    <marginBottom>5</marginBottom>
    <size scale="large" />
  </style>

  <!--Buttons-->
  <!--Limit the button size (TEMP)-->
  <style name="button_style" link="large_margins">
    <horizontalAlignment>center</horizontalAlignment>
    <widthPercentage>-1</widthPercentage>
    <foreground color="white" />
    <background color="37 103 167" />
  </style>

  <style name="selectedButton">
    <background color="37 103 167" />
  </style>

  <style name="lightButton">
    <foreground color="white" />
    <background color="131 180 228" />
  </style>


  <!--Margins-->
  <style name="noMargins">
    <marginLeft>0</marginLeft>
    <marginRight>0</marginRight>
    <marginTop>0</marginTop>
    <marginBottom>0</marginBottom>
  </style>

  <style name="margins">
    <marginLeft>10</marginLeft>
    <marginRight>10</marginRight>
    <marginTop>10</marginTop>
    <marginBottom>10</marginBottom>
  </style>

  <style name="large_margins">
    <marginLeft>20</marginLeft>
    <marginRight>20</marginRight>
    <marginTop>20</marginTop>
    <marginBottom>20</marginBottom>
  </style>
  
    <!--Apply the margin styles to all elements-->
  <!--style name="buttons" link="button_style" /-->
  <style name="buttons">
    <horizontalAlignment>center</horizontalAlignment>
    <widthPercentage>-1</widthPercentage>
    <foreground color="white" />
    <background color="37 103 167" />
  </style>
  <style name="callouts" link="margins" />
  <style name="equations" link="margins" />
  <style name="figures" link="margins" />
  <style name="images" link="margins" />
  <style name="labels" link="margins" />
  <style name="paragraphs" link="margins" />
  <style name="sliders" link="large_margins" />
  <style name="tables" link="margins" />
  <style name="textInputs" link="margins" />
  <style name="toggleSwitches" link="margins" />
  <style name="videos" link="margins" />
  <style name="drawings" link="margins" />


    <!-- Define a style for changing the background colour of table headings to light grey -->
    <!-- <style name="tableHeaders" cascading="true">
    <background color="200 200 200"/>
  </style> -->

  <!--IMAGES-->
  <!-- Define a style for figure captions -->
  <style name="figureCaptions">
      <!-- Make figure captions a little smaller -->
      <size scale="small" />

      <!-- Make the caption centered -->
      <textAlignment>center</textAlignment>
    </style>

  <!-- Define a style for large images -->
  <style name="xlarge">
    <widthPercentage>1</widthPercentage>
    <horizontalAlignment>center</horizontalAlignment>
  </style>
  

  <!-- Define a style for large images -->
  <style name="large">
    <widthPercentage>0.75</widthPercentage>
    <horizontalAlignment>center</horizontalAlignment>
  </style>

  <!-- Define a style for medium images -->
  <style name="medium">
    <widthPercentage>0.50</widthPercentage>
    <horizontalAlignment>center</horizontalAlignment>
  </style>

  <!-- Define a style for small images -->
  <style name="small">
    <widthPercentage>0.25</widthPercentage>
    <horizontalAlignment>center</horizontalAlignment>
  </style>

  <!-- Define a style for tiny images -->
  <style name="tiny">
    <widthPercentage>0.10</widthPercentage>
    <horizontalAlignment>center</horizontalAlignment>
  </style>

  <!-- Define styles for drawings/plots/series -->
  <style name="series">
    <lineThickness>1.0</lineThickness>
  </style>

    <!--
      This palette was generated from the proposed Codex logo.
      I purposelfully picked the first colour to be the color 
      in the logo which is used as the iOS tint colour and the
      Android material design colour. Since most plots tend to
      have at least one data series, this approach fits nicely
      in with the existing UI elements.
  -->
    <style name="series1">
      <!-- Red -->
      <foreground color="239 64 57" />
    </style>

    <style name="series2">
      <!-- Blue -->
      <foreground color="46 152 212" />
    </style>

    <style name="series3">
      <!-- Green -->
      <foreground color="137 190 64" />
    </style>

    <style name="series4">
      <!-- Purple -->
      <foreground color="151 92 166" />
    </style>

    <style name="series5">
      <!-- Orange -->
      <foreground color="248 152 32" />
    </style>

    <style name="series6">
      <!-- Teal -->
      <foreground color="37 154 137" />
    </style>

    <style name="blackLines">
      <!--Black Lines-->
      <foreground color="black" />
    </style>

  <style name="thick2">
    <lineThickness>2</lineThickness>
  </style>

  <style name="thick3">
    <lineThickness>3</lineThickness>
  </style>

  <style name="thick10">
    <lineThickness>10</lineThickness>
  </style>

    <style name="questionAnswer" link="themeColour">
      <marginBottom>20</marginBottom>
      <marginTop>20</marginTop>
      <marginLeft>50</marginLeft>
      <marginRight>50</marginRight>
    </style>

    <style name="title" link="titleColour">
      <bold>true</bold>
      <size scale="0.8" />
    </style>

    <style name="icon">
      <widthPercentage>0.1</widthPercentage>
    </style>

    <style name="definition" link="themeColour">
      <bold>true</bold>
      <marginLeft>40</marginLeft>
      <marginRight>40</marginRight>
    </style>

    <style name="exampleDiv">
      <borderColor color="black" />
      <borderThickness>2</borderThickness>
    </style>

    <style name="exampleTitle">
      <size scale="0.8" />
      <bold>true</bold>
    </style>

    <!--
  <style name="sectionsLevel1">
    <increment counter="sectionsLevel1ForCode"/>
    <counter name="codeNumber" format="decimal" parent="sectionsLevel1ForCode"/>
  </style> -->


    <style>
      <counter name="codeNumber" format="decimal" parent="sections" />
    </style>

    <style name="codeTitle">
      <increment counter="codeNumber" />
      <numbering counter="codeNumber" mode="hierarchical">
        <pattern>
          <b>Code Snippet #</b>
        </pattern>
      </numbering>
    </style>


    <style name="codeBorder" link="themeColour">
      <widthPercentage>0.5</widthPercentage>
      <horizontalAlignment>center</horizontalAlignment>
    </style>

    <!-- <style name="code" cascading="true">
    <font name="monospace"/>
  </style> -->

    <style name="border">
      <background color="white" />
      <marginLeft>4</marginLeft>
      <marginRight>4</marginRight>
      <marginTop>4</marginTop>
      <marginBottom>4</marginBottom>
    </style>

    <style name="tableHeaders" link="themeColour" />

    <style name="summary" link="themeColour">
      <marginLeft>50</marginLeft>
      <marginRight>50</marginRight>
      <marginBottom>20</marginBottom>
      <horizontalAlignment>center</horizontalAlignment>
    </style>

    <style name="collapsed">
      <visibility>collapsed</visibility>
    </style>

    <style>
      <counter name="questions" />
    </style>

    <style name="qNum">
      <numbering counter="questions" mode="flat" pattern="QUESTION #" />
      <increment counter="questions" />
    </style>

  <style name="iconSci">
    <widthPercentage>0.9</widthPercentage>
  </style>

  <style name="sciNot">
    <size scale="0.9" />
    <textAlignment>center</textAlignment>
  </style>

  <style name="iconSol">
    <widthPercentage>0.11</widthPercentage>
  </style>

  <style name="iconMulti">
    <widthPercentage>0.17</widthPercentage>
  </style>

  <style name="finalStyle" link="noMargins">
    <foreground color="gray" />
    <size scale="0.8" />
    <textAlignment>center</textAlignment>
  </style>

  <style name="center">
    <textAlignment>center</textAlignment>
  </style>

  <style name="finalTF">
    <foreground color="gray" />
    <textAlignment>center</textAlignment>
  </style>

  <style name="TF" link="margins">
    <widthPercentage>1</widthPercentage>
  </style>

  <style name="iconTF">
    <widthPercentage>0.29</widthPercentage>
  </style>


  <style name="invisible">
    <visibility>collapsed</visibility>
  </style>

  <!--Defining themeColors in Lua-->
  <script>
    local niTheme = {};

    niTheme.lightButton = color.rgb(131, 180, 228);
    niTheme.selectedButton = color.rgb(37, 103, 167);
    niTheme.blue = color.rgb(37, 103, 167);
  </script>

</fragment>
