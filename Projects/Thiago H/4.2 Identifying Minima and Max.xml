              </onValueChanged>
            </toggle>
          </stack>
          </stack>

        
        
        
        
        
        <stack name="plotStack" orientation="horizontal">

         
          

         <!--Graph 1-->
          <xyPlot name="myPlot1" style="hidden">

            <series name="aSeries" manual="true">
              <style>
                <foreground color="50 135 184" />
